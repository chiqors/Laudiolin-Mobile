// prettier-ignore
{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "jsx": "react-native",
    "moduleResolution": "node",
    "types": ["react-native"],
    "lib": ["es2019"],

    "strict": true,
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/*"],
      "@backend/*": ["src/backend/*"],
      "@pages/*": ["src/ui/pages/*"],
      "@modals/*": ["src/ui/modals/*"],
      "@widgets/*": ["src/ui/components/widgets/*"],
      "@components/*": ["src/ui/components/*"],
      "@styles/*": ["src/ui/styles/*"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
